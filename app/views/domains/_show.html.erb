<%= flash_helper %>

<div class='infobox'>
	<h4>
		<%= @domain.name %>
		<%= link_to content_tag(:span, 'Edit'), edit_domain_path(@domain), :remote => true, :class => 'minibutton makespace-1' %>
		<%= fancy_destroy_button(domain_path(@domain, :version => @domain.version), 'All below dictionaries will be deleted too. Are you sure?', true) %>
	</h4>
	
	<div class='body'>
		<table class='plain'>
			<tr>
				<th class='span-3'>Name:</th>
				<td class='span-7'><%= @domain.name %></td>
				<th class='span-3'>Label:</th>
				<td class='span-7'><%= @domain.label %></td>
			</tr>
			<tr>
				<th>Hidden:</th>
				<td><%= @domain.hidden.yesno %></td>
				<th>Last Update:</th>
				<td><%= last_update_msg(@domain) %></td>
			</tr>
			<tr>
				<th>Description:</th>
				<td colspan="3"><%= @domain.description %></td>
			</tr>
		</table>
	</div>
</div>

<div>
	<h4>
		Dictionary List
		<%= link_to content_tag(:span, 'New Dictionary'), new_domain_dictionary_path(@domain), :remote => true, :class => 'minibutton' %>
	</h4>
</div>
<div id="new_dictionary"></div>
<div id="dictionary_list">
	<%= render 'dictionaries/index', :dictionaries => @domain.dictionaries %>
</div>
